<Window x:Class="LabsCG7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabsCG7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Canvas Name="MyCanvas" Background="LightSlateGray" PreviewMouseRightButtonDown="MyCanvas_OnPreviewMouseDown" PreviewMouseLeftButtonDown="UIElement_OnMouseDown" MouseMove="Button_MouseMove"></Canvas>
        <Label Name="lblCoordinateInfo" Grid.Row="1" MinHeight="20" FontSize="14"></Label>
    </Grid>
</Window>
